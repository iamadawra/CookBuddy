<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backrepeat"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape"
        android:padding="15dp"
        android:shadowColor="#AC8359"
        android:shadowDx="3"
        android:shadowDy="-3"
        android:shadowRadius="1.5"
        android:text="Recipe: Chocolate Chip Cookies"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#663300"
        android:textSize="20dp"
        android:textStyle="bold" />
    <!-- <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipe_instruction"
        android:layout_centerHorizontal="true"
        android:text="Start Recipe!" />-->

    <TextView
        android:id="@+id/recipe_instruction"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/recipe_title"
        android:layout_alignRight="@+id/recipe_title"
        android:layout_below="@+id/recipe_title"
        android:layout_marginTop="18dp"
        android:background="@drawable/shape"
        android:padding="15dp"
        android:paddingTop="200dp"
        android:text="Ingredients:\n* Chocolate Chips\n* Cookie Dough"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#663300"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/recipe_instruction"
        android:layout_alignRight="@+id/recipe_instruction"
        android:layout_below="@+id/recipe_instruction"
        android:layout_marginTop="27dp"
        android:background="@drawable/shape"
        android:padding="15dp"
        android:shadowColor="#AC8359"
        android:shadowDx="3"
        android:shadowDy="-3"
        android:shadowRadius="1.5"
        android:src="@drawable/cookies" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Start Cooking!"
         />

    <ImageButton
        android:id="@+id/Button_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/imageView1"
        android:background="@drawable/calling_icon" />

    <ImageButton
        android:id="@+id/Button_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView1"
        android:layout_alignRight="@+id/imageView1"
        android:background="@drawable/help" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/Button_1"
        android:layout_marginLeft="5dp"
        android:text="Help" />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/Button_2"
        android:text="Clarify" />

    <ImageButton
        android:id="@+id/cook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/Button_1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cook"
        android:onClick="startRecipe" />
    
</RelativeLayout>