<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backrepeat"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Help" >
	<TextView
        android:id="@+id/textView1"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="50dp"
        android:paddingTop="12dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape"
        android:gravity="top|center_vertical|center_horizontal|fill_horizontal"
        android:shadowColor="#AC8359"
        android:shadowDx="3"
        android:shadowDy="-3"
        android:shadowRadius="1.5"
        android:text="Cook Buddy"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#663300"
        android:textSize="42sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewHelpText"
        android:layout_alignRight="@+id/home"
        android:layout_marginBottom="10dp"
        android:text="Home" />

    <ImageButton
        android:id="@+id/home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textViewHome"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_icon"
        android:onClick="goHome" />

    <TextView
        android:id="@+id/textViewHelpTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:background="@drawable/shape"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/Voice_Commands"
        android:textColor="#663300"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewHelpText"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignLeft="@+id/textViewHelpTitle"
        android:layout_below="@+id/textViewHelpTitle"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape"
        android:padding="15dp"
        android:text="@string/help_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#663300"
        android:textSize="14.5sp"
        android:textStyle="bold" />

</RelativeLayout>
